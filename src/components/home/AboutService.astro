---
import mark_1 from "@assets/mark_1.svg?raw";
import mark_2 from "@assets/mark_2.svg?raw";
import mark_3 from "@assets/mark_3.svg?raw";
import LANGUAGES from "@/i18n/index.js";

const LANG = LANGUAGES.get(Astro.currentLocale)?.about_service;
---

<section class="About-service container">

    <h2 class="About-service-title">{LANG.title}</h2>
    
    <div class="About-service-cards">

        <div class="About-service-card">
            <div class="About-service-mark" set:html={mark_1} />
            
            <h6>{LANG.step_1_title}</h6>

            <p>{LANG.step_1_text}</p>
        </div>

        <div class="About-service-card">
            <div class="About-service-mark" set:html={mark_2} />
            
            <h6>{LANG.step_2_title}</h6>

            <p>{LANG.step_2_text}</p>
        </div>

        <div class="About-service-card">
            <div class="About-service-mark" set:html={mark_3} />
            
            <h6>{LANG.step_3_title}</h6>

            <p>{LANG.step_3_text}</p>
        </div>
    </div>
</section>

<style>
    .About-service {
        margin-block: 100px; 
        padding-block: 30px;
        background-color: #fff;
        border-radius: 10px;

        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 40px;

        box-shadow: 0px 0px 10px 0px #00000070;

        .About-service-title {
            font-size: 50px;
            word-spacing: 5px;
            font-weight: bold;
            margin: 0;
        }

        .About-service-cards {
            display: flex;
            gap: 20px;
            justify-content: space-between;

            .About-service-card {
                padding: 20px;
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 15px;
                text-align: center;

                h6 {
                    color: #104cad;
                    font-size: 20px;
                }
            }
        }

        
    }
    
    .About-service-mark {
        color: #104cad;
        aspect-ratio: 150 / 250;
        width: 100px;
        margin-bottom: 20px;
        
        filter: drop-shadow(0px 0px 10px #00000050);

        & :global(svg) {
            width: 100%;
            height: 100%;
        }
    }
</style>