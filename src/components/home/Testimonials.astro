---
import LANGUAGES from "@/i18n/index.js";

const LANG = LANGUAGES.get(Astro.currentLocale)?.testimonials;

const TESTIMONIALS = [
    {
        ...LANG.testimonial_1,
        img: null
    },
    {
        ...LANG.testimonial_2,
        img: null
    },
    {
        ...LANG.testimonial_3,
        img: null
    },
]
---


<section class="Testimonials container">

    <h2 class="Testimonials-title">{LANG.title}</h2>

    <p class="Testimonials-heading">{LANG.heading}</p>

    <div class="Testimonials-content">
        {
            TESTIMONIALS.map(({img, name, job, text}) => {

                return <div class="Testimonial-card">

                    {img && <img src={img} alt={`Foto de ${name}`} />}

                    <h5>{name}</h5>

                    <span>{job}</span>

                    <article>
                    {
                        text?.map(value => {

                            return <p>{value}</p>
                        })
                    }
                    </article>
                </div>
            })
        }
    </div>
</section>


<style>

    .Testimonials {
        margin-block: 100px; 
        padding-block: 30px;
        padding-inline: 30px;
        background-color: #fff;
        border-radius: 10px;

        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 40px;

        box-shadow: 0px 0px 10px 0px #00000070;

        .Testimonials-title {
            font-size: 50px;
            word-spacing: 5px;
            font-weight: bold;
            margin: 0;
        }
        .Testimonials-heading {
            font-size: 18px;
            letter-spacing: 2px;
            color: #000;
            line-height: 1.8;
            text-align: center;
            text-wrap: balance;
            max-width: 80ch;
            font-family: var(--text-font);
        }

        .Testimonials-content {

            display: flex;
            flex-wrap: wrap;
            gap: 30px;

            .Testimonial-card {
                padding: 20px;

                flex-basis: 250px;
                flex-grow: 1;

                display: flex;
                flex-direction: column;
                align-items: center;

                gap: 20px;
                border-radius: 20px;
                box-shadow: 0px 0px 10px 0px #00000020;

                img {
                    width: 150px;
                    height: 150px;
                    object-fit: cover;
                    object-position: top;
                    border-radius: 50%;
                }
                h5 {
                    font-size: 24px;
                    margin: 0;
                }
                span {
                    font-size: 18px;
                    color: #5a5a5a;
                    font-weight: 200;
                    text-align: center;
                }

                article p {
                    font-family: var(--text-font);
                    font-weight: 200;
                    font-size: 14px;
                    letter-spacing: 2px;
                    color: #000;
                    line-height: 1.8;
                }
            }
        }
    }
</style>