---
import miguel from "@assets/testimonials/miguel.jpeg";
import javier from "@assets/testimonials/javier.jpeg";
import ana from "@assets/testimonials/ana.jpeg";
import laura from "@assets/testimonials/laura.jpeg";

import LANGUAGES from "@/i18n/index.js";

const LANG = LANGUAGES.get(Astro.currentLocale)?.testimonials;

const TESTIMONIALS = [
    {
        ...LANG.testimonial_1,
        img: laura.src
    },
    {
        ...LANG.testimonial_2,
        img: javier.src
    },
    {
        ...LANG.testimonial_3,
        img: ana.src
    },
    {
        ...LANG.testimonial_4,
        img: miguel.src
    },
]
---


<section class="Testimonials container">

    <h2 class="Testimonials-title">{LANG.title}</h2>

    <p class="Testimonials-heading">{LANG.heading}</p>

    <div class="Testimonials-content">
        {
            TESTIMONIALS.map(({img, name, job, text}) => {

                return <div class="Testimonial-card">

                    <img src={img} alt={`Foto de ${name}`} />

                    <h5>{name}</h5>

                    <span>{job}</span>

                    <p>{text}</p>
                </div>
            })
        }
    </div>
</section>


<style>

    .Testimonials {
        margin-block: 100px; 
        padding-block: 30px;
        padding-inline: 30px;
        background-color: #fff;
        border-radius: 10px;

        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 40px;

        box-shadow: 0px 0px 10px 0px #00000070;

        .Testimonials-title {
            font-size: 50px;
            word-spacing: 5px;
            font-weight: bold;
            margin: 0;
        }
        .Testimonials-heading {
            font-size: 20px;
            text-align: center;
            text-wrap: balance;
            max-width: 80ch;
        }

        .Testimonials-content {
            display: grid;
            grid-template-columns: repeat(2, minmax(200px, 1fr));
            gap: 30px;
            place-items: center;

            
            .Testimonial-card {
                padding: 20px;
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 10px;
                border-radius: 20px;
                box-shadow: 0px 0px 10px 0px #00000020;

                img {
                    width: 150px;
                    height: 150px;
                    object-fit: cover;
                    object-position: top;
                    border-radius: 50%;
                }

                h5 {
                    font-size: 24px;
                    margin: 0;
                }

                span {
                    font-size: 18px;
                    color: #5a5a5a;
                    font-weight: 200;
                }
            }
        }
    }
</style>