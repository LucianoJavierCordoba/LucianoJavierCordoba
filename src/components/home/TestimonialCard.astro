---
const {image, name, job, text = [], details} = Astro.props;
---

<div class="Testimonial-card">
                                    
    {image && <img src={image} alt={`Foto de ${name}`} />}

    <h5>{name}</h5>

    <span>{job}</span>

    <article>
    {
        text?.map(value => {

            return <p>{value}</p>
        })
    }
    </article>

    <p class="Testimonial-card-details">{details}</p>
</div>

<style>
.Testimonial-card {
    height: 100%;
    padding: 20px;

    display: flex;
    flex-direction: column;
    align-items: center;

    gap: 20px;
    border-radius: 20px;
    box-shadow: 0px 0px 10px 0px #00000020;

    img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        object-position: top;
        border-radius: 50%;
    }
    h5 {
        font-size: 25px;
        letter-spacing: 2px;
        margin: 0;
    }
    span {
        font-family: var(--text-font);
        font-size: 18px;
        letter-spacing: 1px;
        color: #5a5a5a;
        font-weight: 200;
        text-align: center;
    }

    article {

        p {
            font-family: var(--text-font);
            font-size: 14px;
            letter-spacing: 1px;
            color: #000;
            line-height: 1.8;
            
        }
    }

    .Testimonial-card-details {
        margin-top: auto;
        max-width: 38ch;
        margin-right: auto;
        font-family: var(--text-font);
        font-weight: 200;
        font-size: 12px;
        letter-spacing: 1px;
        color: #000;
        line-height: 1.8;
        height: 10%;
    }
}
</style>