---
const {icons = [], title = ""} = Astro.props;
---



<div class="Tech-stack">

    <h3 class="Tech-stack-title">{title}</h3>

    <div class="Tech-stack-icons">
        {
            icons.map(({name, image}) => {

                return <img src={image.src} alt={`Logo ${name}`}/>
            })
        }
    </div>

</div>

<style>
    .Tech-stack {
        padding-block: 50px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 50px;
        --tech-icon-width: 150px;
        --tech-icon-gap: 100px;

        .Tech-stack-title {
            font-size: 40px;
            letter-spacing: 2px;
            font-family: var(--titles-font);
        }

        .Tech-stack-icons {
            padding-inline: 20px;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 20px var(--tech-icon-gap);
            
            img {
                object-fit: scale-down;
                width: var(--tech-icon-width);
            }
        }
    }
</style>