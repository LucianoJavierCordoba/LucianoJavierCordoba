---
import { NAME } from "@/config";

const {text = []} = Astro.props;
---


<article class="Service-quote">

    {
        text.map(value => {

            return <p>{value}</p>
        })
    }
    
    <span class="Service-quote-sign">{NAME}</span>

</article>

<style>
    .Service-quote {
        padding: 20px;
        max-width: 600px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px #00000030;

        p {
            font-style: italic;
            font-size: clamp(16px, 2vw, 18px);
            font-family: var(--text-font);
            letter-spacing: 1px;

            &:first-child {

                text-indent: 0.5em;

                &::before {
                    content: '\f6b0';
                    display: inline-block;
                    font-family: 'bootstrap-icons';
                }
            }
            &:nth-last-child(2) {
                
                &::after {
                    content: '\f6b0';
                    display: inline-block;
                    rotate: 180deg;
                    font-family: 'bootstrap-icons';
                }
            }
        }
        .Service-quote-sign {
            padding-top: 20px;
            display: block;
            font-size: clamp(16px, 2vw, 18px);
            text-align: end;
            color: #b12426;
            font-weight: 600;
            font-family: var(--text-font);
            letter-spacing: 1px;
        }
    }
</style>