---
import "@/css/links-icons.css";
import LANGUAGES from "@/i18n/index.js";
import { LINKS } from "@/utils/RedesUtils";

const locale = Astro.currentLocale;

const QUESTIONS = LANGUAGES.get(locale)?.preguntas_frecuentes.questions;
---


<section class="Question-and-anwsers">

    <div class="content container">
    {
        QUESTIONS.map(({question, anwser, links}) => {


            return <details>
                <summary>{question}</summary>

                <article>
                    {
                        anwser?.map(value => {

                            return <p>{value}</p>
                        })
                    }

                    <div class="helper-links">
                        {
                            links?.map((value = '') => {

                                if(value.startsWith('link:')){

                                    const [_, name] = value.split(':');
                                    const {label, link} = LINKS[name];

                                    return <a class="icon-link" href={link}>{label}</a>
                                }

                                return <a class="icon-link" href={value}>{value}</a>
                            })
                        }
                    </div>

                    <hr />
                </article>
            </details>
        })
    }
    </div>
</section>

<style>
    .Question-and-anwsers {
        background-color: #fff;
        padding-block: 50px;

        .content {
            display: flex;
            flex-direction: column;

            details {
                padding: 20px 20px;
                list-style: none;
                
                summary {
                    display: block;
                    text-align: center;
                    font-size: 30px;
                    color: #0c3947;
                    text-wrap: balance;
                }

                article {
                    padding-top: 20px;
                    margin-inline: auto;
                    max-width: 80ch;

                    p {
                        font-size: 18px;
                        letter-spacing: 1px;
                    }

                    .helper-links {
                        display: flex;
                        gap: 15px;
                        justify-content: start;

                        a {
                            text-decoration: none;

                            color: #03498b;
                            font-size: 18px;

                            &:hover {
                                color: #056ed1;
                            }
                        }
                    }

                    hr {
                        width: 90%;
                        margin-inline: auto;
                        border-color: #126077;
                        border-width: 3px;
                    }
                }

            }

            details:last-child article hr{
                display: none;
            }
        }
    }

    
</style>