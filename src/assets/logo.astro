---
import logo from "./logo.svg?raw";

const {width = '150px', height = '60px'} = Astro.props;
---

<div class="Logo" set:html={logo} 

    style={{ width, height, }} 
/>

<style>
    .Logo {
        width: 150px;
        height: 60px;
        filter: drop-shadow(0px 0px 8px #00000030);

        & :global(svg){
            width: 100%;
            height: 100%;
            filter: drop-shadow(0px 0px 1px #00000070);
        }
    }

</style>