---
import logo from "./logo.svg?raw";

const {width = '', height = '', ...others} = Astro.props;
---

<div class="Logo" set:html={logo} {...others} />

<style
    define:vars={{
        'logo-width': width,
        'logo-height': height
    }}
>
    .Logo {
        display: inline-block;
        width: var(--logo-width, 150px);
        height: var(--logo-height, 60px);
        filter: drop-shadow(0px 0px 8px #00000030);

        & :global(svg){
            width: 100%;
            height: 100%;
            filter: drop-shadow(0px 0px 1px #00000070);
        }
    }
</style>