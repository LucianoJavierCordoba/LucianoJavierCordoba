---
import Layout from "@layouts/Layout.astro";
import video from "@assets/videos/prospeccion/prospeccion.webm";
import poster from "@assets/videos/prospeccion/prospeccion.webp";
import video_md from "@assets/videos/prospeccion/prospeccion-mobile.mp4";
import poster_md from "@assets/videos/prospeccion/prospeccion-mobile.png";
import Banner from "@components/Banner.astro";

import LANGUAGES from "@/i18n/index.js";
import Price from "@/components/servicios/Price.astro";
import PayMethods from "@/components/servicios/PayMethods.astro";
import { SERVICES_PRICING } from "@/config";
import Contact from "@/components/home/Contact.astro";
import Quote from "@/components/servicios/Quote.astro";
import TechStack from "@/components/servicios/TechStack.astro";
import { STACK_1 } from "@/assets/logos";
import Stats from "@/components/servicios/Stats.astro";

import odometer from "@/scripts/odometer.min.js?url";

const LANG = LANGUAGES.get(Astro.currentLocale)?.servicios['prospeccion-b2b'];
---

<Layout title="Prospeccion B2B">

    <Banner>

        <Fragment slot="video-sources">
            <source data-type="desktop" data-src={video} data-poster={poster.src}/>
            <source data-type="mobile" data-src={video_md} data-poster={poster_md.src}/>
        </Fragment>

        <h1 class="banner-title">{LANG.banner.title}</h1>
        
        <h2 class="banner-subtitle">
            {LANG.banner.heading.at(0)} {750} {LANG.banner.heading.at(1)}
        </h2>

        
    </Banner>

    <section class="About-service">

        <Stats LANG={LANG} />
        
        <TechStack icons={STACK_1} title={LANG["tech-stack-title"]}/>

    </section>

    <Price LANG={LANG.pricing} price={SERVICES_PRICING['prospeccion-b2b']}/>

    <PayMethods />

    <Contact />

</Layout>

<style>
    :global(.Banner) {

        height: 50vw;
        max-height: 90vh;

        .Banner-content {
            --banner-content-padding: 50px 50px;
            align-items: center;
            gap: 30px;
        }

        @media (max-width: 767.98px) {

            height: 60vh;

            .Banner-content {
                --banner-content-padding: 50px 50px;
                align-self: center;
            }

            video {
                object-position: bottom;
            }
        }
    }
    :global(.Banner-background){
            
        background: radial-gradient(circle, #aaaaaa5e 0%, transparent 100%);
    }
    .banner-title {
        margin-inline: auto;
        font-weight: bolder;
        font-size: clamp(40px, 8vw, 170px);
        text-align: center;
        text-shadow: 8px 8px 5px #00000050;
        letter-spacing: 10px;
        line-height: 1.5;
        color: #ffffff;
        max-width: 50ch;
    }
    .banner-subtitle {
        margin-inline: auto;
        font-weight: bold;
        text-align: center;
        font-size: clamp(18px, 3vw, 55px);
        text-shadow: 0px 8px 5px #00000020;
        letter-spacing: 5px;

        max-width: 60ch;
        color: #000000;

        & :global(span) {
            color: #1da1d2;
        }
    }

    :global(.Service-price-title){
        color: #ffa340;
    }

    .About-service {
        padding-block: 70px;
        background-color: #e0e0e0;
        
        display: flex;
        flex-direction: column;
        gap: 50px;
        
    }
    .About-service :global(.Tech-stack){
        margin-top: 50px;
        background-color: #ffffffaa;
        --tech-icon-height: 40px;
    }

    :global(.Service-stats custom-odometer){
        color: #040E5F;
    }
</style>