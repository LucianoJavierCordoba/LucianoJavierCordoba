---
import Layout from "@layouts/Layout.astro";
import video from "@assets/videos/administrativo/administrativo.webm";
import poster from "@assets/videos/administrativo/administrativo.webp";
import Banner from "@components/Banner.astro";
import {SERVICES_PRICING} from "@/config/index.js";
import LANGUAGES from "@/i18n/index.js";
import Price from "@/components/servicios/Price.astro";
import PayMethods from "@/components/servicios/PayMethods.astro";
import Contact from "@/components/home/Contact.astro";

const LANG = LANGUAGES.get(Astro.currentLocale)?.servicios['asistente-administrativo'];

---

<Layout title="Asistente administratico Jr.">

    <Banner background={{video, poster: poster.src}}>

        <h1 class="banner-title">{LANG.banner.title}</h1>
        
        <h2 class="banner-subtitle">
            {LANG.banner.heading.at(0)} {750} {LANG.banner.heading.at(1)}
        </h2>

    </Banner>

    <Price LANG={LANG.pricing} price={SERVICES_PRICING['asistente-administrativo']} />

    <PayMethods />

    <Contact />

</Layout>

<style>
    :global(.Video-background video) {
        object-position: center 30%;
    }
    :global(.Banner-content) {

        gap: 30px;
    }
    .banner-title {
        margin-inline: auto;
        font-weight: bolder;
        font-size: 70px;
        text-align: center;
        text-shadow: 0px 8px 5px #00000050;
        letter-spacing: 5px;
        line-height: 1.5;
        color: #37738b;
        max-width: 50ch;
    }
    .banner-subtitle {
        margin-inline: auto;
        font-weight: bold;
        text-align: center;
        font-size: 35px;
        text-shadow: 0px 8px 5px #00000050;
        letter-spacing: 5px;

        max-width: 60ch;
        color: #fff;

        & :global(span) {
            color: #1da1d2;
        }
    }

    :global(.Service-price-title) {
        color: #0088ee;
    }
</style>