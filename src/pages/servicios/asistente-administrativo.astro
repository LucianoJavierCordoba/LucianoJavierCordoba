---
import Layout from "@layouts/Layout.astro";
import video from "@assets/videos/administrativo/administrativo.webm";
import poster from "@assets/videos/administrativo/administrativo.webp";
import Banner from "@components/Banner.astro";

import LANGUAGES from "@/i18n/index.js";

const LANG = LANGUAGES.get(Astro.currentLocale)?.servicios.home;
---

<Layout title="Asistente administratico Jr.">

    <Banner background={{video, poster}}>

        <h1 class="banner-title">Asistente administratico Jr.</h1>
        
        <h2 class="banner-subtitle" set:html={LANG.banner.subtitle}></h2>

        
    </Banner>

</Layout>

<style>
    :global(.Video-background video) {
        object-position: center 30%;
    }
    :global(.Banner-content) {

        gap: 30px;
    }
    .banner-title {
        margin-inline: auto;
        font-weight: bolder;
        font-size: 70px;
        text-align: center;
        text-shadow: 0px 8px 5px #00000050;
        letter-spacing: 5px;
        line-height: 1.5;
        color: #37738b;
        max-width: 50ch;
    }
    .banner-subtitle {
        margin-inline: auto;
        font-weight: bold;
        text-align: center;
        font-size: 35px;
        text-shadow: 0px 8px 5px #00000050;
        letter-spacing: 5px;

        max-width: 60ch;
        color: #fff;

        & :global(span) {
            color: #1da1d2;
        }
    }
</style>