---
import Layout from "@layouts/Layout.astro";
import video from "@assets/videos/ventas/ventas.webm";
import poster from "@assets/videos/ventas/ventas.webp";
import Banner from "@components/Banner.astro";

import LANGUAGES from "@/i18n/index.js";
import Price from "@/components/servicios/Price.astro";
import PayMethods from "@/components/servicios/PayMethods.astro";
import { SERVICES_PRICING } from "@/config";
import Contact from "@/components/home/Contact.astro";
import Quote from "@/components/servicios/Quote.astro";
import TechStack from "@/components/servicios/TechStack.astro";
import { STACK_2 } from "@/assets/logos";


import video2 from "@assets/videos/supervisor de ventas.mp4";
import VideoJS from "@/components/VideoJS.astro";

const LANG = LANGUAGES.get(Astro.currentLocale)?.servicios['supervisor-de-ventas'];
---

<Layout title="Supervisor de ventas">

    <Banner>
        <Fragment slot="video-sources">
            <source data-type="desktop" data-src={video} data-poster={poster.src}/>
        </Fragment>

        <h1 class="banner-title">{LANG.banner.title}</h1>
        
        <h2 class="banner-subtitle">
            {LANG.banner.heading.at(0)} {750} {LANG.banner.heading.at(1)}
        </h2>
   
    </Banner>

    <section class="About-service">
        <div class="About-service-content">
            <Quote text={LANG.quote} />

            <VideoJS className="About-service-video" controls>
                <source src={video2} type="video/mp4" />
            </VideoJS>
        </div>

        <TechStack icons={STACK_2} title={LANG["tech-stack-title"]}/>
    </section>

    <Price LANG={LANG.pricing} price={SERVICES_PRICING['supervisor-de-ventas']}/>

    <PayMethods />

    <Contact />

</Layout>

<style>
    :global(.Banner-content) {

        gap: 30px;
    }
    :global(.Banner-background){
            
        background: radial-gradient(circle, #ffffff6e 0%, transparent 100%);
    }
    .banner-title {
        margin-inline: auto;
        font-weight: bolder;
        font-size: clamp(40px, 8vw, 130px);
        text-align: center;
        text-shadow: 0px 8px 5px #00000050;
        letter-spacing: 5px;
        line-height: 1.5;
        color: #ffffff;
        max-width: 50ch;
    }
    .banner-subtitle {
        margin-inline: auto;
        font-weight: bold;
        text-align: center;
        font-size: clamp(18px, 3vw, 35px);
        text-shadow: 0px 8px 5px #00000020;
        letter-spacing: 5px;

        max-width: 60ch;
        color: #040e5f;

        & :global(span) {
            color: #1da1d2;
        }
    }

    .About-service {
        padding-block: 50px;
        background-color: #82b8ff;
        
        .About-service-content {
            padding-inline: 50px;
            padding-bottom: 100px;
            display: flex;
            align-items: center;
            gap: 30px;
            flex-wrap: wrap;
            
            @media (max-width: 767.98px) {
                padding-inline: 20px;
            }

            .extra-content {
                min-width: 400px;
                flex-grow: 1;
            }
        }

        .About-service-video {

            width: 560px;
            height: 315px;
            display: block;
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px #00000030;
        }
        
    }
    .About-service :global(.Tech-stack){
        background-color: #ffffffaa;
    }
</style>