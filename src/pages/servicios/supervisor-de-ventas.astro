---
import Layout from "@layouts/Layout.astro";
import video from "@assets/videos/ventas/ventas.webm";
import poster from "@assets/videos/ventas/ventas.webp";
import Banner from "@components/Banner.astro";

import LANGUAGES from "@/i18n/index.js";
import Price from "@/components/servicios/Price.astro";
import PayMethods from "@/components/servicios/PayMethods.astro";
import { SERVICES_PRICING } from "@/config";
import Contact from "@/components/home/Contact.astro";

const LANG = LANGUAGES.get(Astro.currentLocale)?.servicios['supervisor-de-ventas'];
---

<Layout title="Supervisor de ventas">

    <Banner background={{video, poster}}>

        <h1 class="banner-title">{LANG.banner.title}</h1>
        
        <h2 class="banner-subtitle">
            {LANG.banner.heading.at(0)} {750} {LANG.banner.heading.at(1)}
        </h2>

        
    </Banner>

    <Price LANG={LANG.pricing} price={SERVICES_PRICING['supervisor-de-ventas']}/>

    <PayMethods />

    <Contact />

</Layout>

<style>
    :global(.Banner-content) {

        gap: 30px;
    }
    .banner-title {
        margin-inline: auto;
        font-weight: bolder;
        font-size: 70px;
        text-align: center;
        text-shadow: 0px 8px 5px #00000050;
        letter-spacing: 5px;
        line-height: 1.5;
        color: #37738b;
        max-width: 50ch;
    }
    .banner-subtitle {
        margin-inline: auto;
        font-weight: bold;
        text-align: center;
        font-size: 35px;
        text-shadow: 0px 8px 5px #00000050;
        letter-spacing: 5px;

        max-width: 60ch;
        color: #fff;

        & :global(span) {
            color: #1da1d2;
        }
    }
</style>