---
import Layout from "../layouts/Layout.astro";

import video_1 from "@assets/videos/banner.mp4";
import poster_1 from "@assets/videos/banner.jpg";
import video_1_md from "@assets/videos/banner-mobile.mp4";
import poster_1_md from "@assets/videos/banner-mobile.jpg";
import video_2 from "@assets/videos/presentacion-animada.mp4";
import poster_2 from "@assets/videos/banner-2.jpg";
import video_2_md from "@assets/videos/presentacion-animada-mobile.mp4";
import poster_2_md from "@assets/videos/banner-2-mobile.jpg";

import Banner from "@components/Banner.astro";
import LANGUAGES from "@/i18n/index.js";
import Expirience from "@/components/home/Expirience.astro";
import Testimonials from "@/components/home/Testimonials.astro";
import AboutMe from "@/components/home/AboutMe.astro";
import Contact from "@/components/home/Contact.astro";
import AboutService from "@/components/home/AboutService.astro";
import { NAME } from "@/config";


const LANG = LANGUAGES.get(Astro.currentLocale)?.banner_home;

---

<Layout title={NAME}>
    
    <Banner className="Banner-2">

        <Fragment slot="video-sources">
            <source data-type="desktop" data-src={video_2} data-poster={poster_1.src}/>
            <source data-type="desktop" data-src={video_2_md} data-poster={poster_1.src}/>
        </Fragment>

    </Banner>

    <Banner className="Banner-1">

        <Fragment slot="video-sources">
            <source data-type="desktop" data-src={video_1} data-poster={poster_1.src}/>
            <source data-type="mobile" data-src={video_1_md} data-poster={poster_1_md.src}/>
        </Fragment>

        <h1 class="banner-title">{LANG.banner_1.title}</h1>
        
        <h2 class="banner-subtitle" set:html={LANG.banner_1.subtitle}></h2>

    </Banner>


    
    <Expirience />

    <Testimonials />

    <AboutService />

    <Contact />

</Layout>

<style>

    .banner-title {
        color: #fff;
        font-weight: bolder;
        font-size: clamp(30px, 5vw, 80px);
        text-align: center;
        max-width: 25ch;
        text-shadow: 0px 8px 5px #00000020;
        letter-spacing: 5px;
        line-height: 1.5;
        
        @media (max-width: 767.98px){
            max-width: 30ch;
        }
    }
    .banner-subtitle {
        margin-top: auto;
        max-width: 30ch;
        color: #0555bc;
        font-weight: bold;
        text-align: center;
        font-family: var(--title-font);
        font-size: clamp(18px, 3vw, 35px);
        /* text-shadow: 0px 8px 5px #00000020; */
        letter-spacing: 1px;
        line-height: 1.8;
        text-wrap: balance;
    }
    .banner-heading {
        margin-top: auto;
        max-width: 30ch;
        color: #000;
        font-weight: 400;
        text-align: center;
        font-family: var(--text-font);
        max-width: 50ch;
        font-size: clamp(16px, 3vw, 20px);
        line-height: 1.7;
        text-shadow: 0px 0px 5px #00000020;
        letter-spacing: 2px;
    }

    :global(.Banner-1){
        
        height: 50vw;
        max-height: 90vh;
        
        .Banner-content {
            --banner-content-padding: 50px 50px;
            align-self: self-start;
            align-items: center;
        }

        @media (max-width: 767.98px) {

            height: 80vh;

            .Banner-content {
                --banner-content-padding: 50px 50px;
                align-self: center;
            }
        }
    }
    :global(.Banner-2){

        height: 50vw;
        max-height: 90vh;
        
        .Banner-content {
            --banner-content-padding: 30px 50px 80px 50px;
            align-self: self-start;
            align-items: start;
        }

        .banner-title, .banner-heading {
            text-align: left;
        }

        @media (max-width: 767.98px) {

            height: 80vh;

            .Banner-content {
                --banner-content-padding: 30px 50px 10px 50px;
                align-self: center;
            }
        } 
    }
</style>