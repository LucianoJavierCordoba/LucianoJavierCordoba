---
import Layout from "../layouts/Layout.astro";

import video_1 from "@assets/videos/banner.mp4";
import video_2 from "@assets/videos/banner-2.mp4";
import poster_1 from "@assets/videos/banner.jpg";
import poster_2 from "@assets/videos/banner-2.jpg";
import Banner from "@components/Banner.astro";
import LANGUAGES from "@/i18n/index.js";
import Expirience from "@/components/home/Expirience.astro";
import Testimonials from "@/components/home/Testimonials.astro";
import AboutMe from "@/components/home/AboutMe.astro";
import Contact from "@/components/home/Contact.astro";
import AboutService from "@/components/home/AboutService.astro";
import { NAME } from "@/config";


const LANG = LANGUAGES.get(Astro.currentLocale)?.banner_home;

---

<Layout title={NAME}>
	
    <Banner background={{video: video_1, poster: poster_1, height: '100%'}}>

        <h1 class="banner-title">{LANG.banner_1.title}</h1>
        
        <h2 class="banner-subtitle" set:html={LANG.banner_1.subtitle}></h2>

        <!-- <h3 class="banner-heading">{LANG.heading}</h3> -->

    </Banner>

    <Banner className="Banner-2" background={{video: video_2, poster: poster_2, height: '100%'}}>

        <h1 class="banner-title">{LANG.banner_2.title}</h1>

        <h3 class="banner-heading">{LANG.banner_2.heading}</h3>

    </Banner>

    <!-- <AboutMe /> -->
    
    <Expirience />

    <Testimonials />

    <AboutService />

    <Contact />

</Layout>

<style>

    :global(.Banner){
        
        height: 50vw;
        max-height: 90vh;
        
        .Banner-content {
            --banner-content-padding: 50px 50px;
            align-self: self-start;
            align-items: center;
        }

        @media (max-width: 767.98px) {
            height: 40vh;
            
            custom-video video {
                object-position: 90%;
            }

            .Banner-content {
                align-self: center;
            }
        }
    }
    .banner-title {
        color: #fff;
        font-weight: bolder;
        font-size: clamp(25px, 5vw, 80px);
        text-align: center;
        max-width: 25ch;
        text-shadow: 0px 8px 5px #00000020;
        letter-spacing: 5px;
        line-height: 1.5;
        
        @media (max-width: 767.98px){
            max-width: 30ch;
        }
    }
    .banner-subtitle {
        margin-top: auto;
        color: #000;
        font-weight: bold;
        text-align: center;
        font-family: var(--text-font);
        font-size: clamp(14px, 3vw, 35px);
        text-shadow: 0px 8px 5px #00000020;
        letter-spacing: 1px;
        line-height: 1.8;
        text-wrap: balance;

        & :global(div) {
            color: #3538fb;
        }
    }
    .banner-heading {
        margin-top: auto;
        color: #8d2666;
        font-weight: 200;
        text-align: center;
        font-family: var(--text-font);
        max-width: 50ch;
        font-size: 20px;
        line-height: 1.7;
        text-shadow: 0px 0px 5px #00000020;
        letter-spacing: 2px;
    }

    :global(.Banner-2){

        .banner-title, .banner-heading {
            text-align: left !important;
        }

        .Banner-content {
            align-items: start !important;
            --banner-content-padding: 50px 50px;
        }
    }

    :global(.Contact) {
        margin-block: 200px 0px;
    }
</style>