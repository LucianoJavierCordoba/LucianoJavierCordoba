---
import Layout from "../layouts/Layout.astro";

import video_1 from "@assets/videos/banner.mp4";
import poster_1 from "@assets/videos/banner.jpg";
import video_1_md from "@assets/videos/banner-mobile.mp4";
import poster_1_md from "@assets/videos/banner-mobile.jpg";
import video_2 from "@assets/videos/presentacion-animada.mp4";

import Banner from "@components/Banner.astro";
import LANGUAGES from "@/i18n/index.js";
import Expirience from "@/components/home/Expirience.astro";
import Testimonials from "@/components/home/Testimonials.astro";
import Contact from "@/components/home/Contact.astro";
import AboutService from "@/components/home/AboutService.astro";
import { NAME } from "@/config";
import AnimatedText3 from "@/components/Animated/AnimatedText3.astro";
import ZohoSalesIQ from "@/components/ZohoSalesIQ.astro";


const LANG = LANGUAGES.get(Astro.currentLocale)?.banner_home;

---

<Layout title={NAME}>
    
    <Banner className="Banner-1">

        <Fragment slot="video-sources">
            <source data-type="desktop" data-src={video_1} data-poster={poster_1.src}/>
            <source data-type="mobile" data-src={video_1_md} data-poster={poster_1_md.src}/>
        </Fragment>

        <h1 class="banner-title">
            <AnimatedText3 text={LANG.banner_1.title} />
        </h1>
        
        <h2 class="banner-subtitle">

            <AnimatedText3 text={LANG.banner_1.subtitle} delay={1500} />
        </h2>

    </Banner>


    
    <Expirience />

    <Testimonials />

    <AboutService />

    <Contact />

    <ZohoSalesIQ slot="scripts" />

</Layout>

<style>

    .banner-title {
        color: #fff;
        --text-animation-caret-color: #fff;
        font-weight: bolder;
        font-size: clamp(40px, 5vw, 60px);
        text-align: left;
        max-width: 25ch;
        text-shadow: 0px 8px 5px #00000020;
        letter-spacing: 5px;
        line-height: 1.5;
        font-family: "Aeonik-Pro-Bold";
        text-transform: uppercase;
        
        @media (max-width: 767.98px){
            max-width: 30ch;
        }
    }
    .banner-subtitle {
        margin-top: auto;
        color: #0555bc;
        --text-animation-caret-color: #0555bc;
        font-weight: bold;
        text-align: left;
        font-family: var(--title-font);
        font-size: clamp(16px, 3vw, 25px);
        /* text-shadow: 0px 8px 5px #00000020; */
        letter-spacing: 1px;
        line-height: 1.8;
        text-wrap: balance;
    }
    .banner-heading {
        margin-top: auto;
        max-width: 30ch;
        color: #000;
        font-weight: 400;
        text-align: center;
        font-family: var(--text-font);
        max-width: 50ch;
        font-size: clamp(16px, 3vw, 20px);
        line-height: 1.7;
        text-shadow: 0px 0px 5px #00000020;
        letter-spacing: 2px;
    }

    :global(.Banner-1){

        height: 50vw;
        max-height: 90vh;
        
        .Banner-content {
            --banner-content-padding: 30px 50px 80px 50px;
            align-items: start;
            max-width: 60vw;
            gap: 30px;
        }

        @media (max-width: 767.98px) {

            height: 80vh;

            .Banner-content {
                --banner-content-padding: 30px 50px 10px 50px;
                max-width: initial;
            }
        } 
    }
</style>